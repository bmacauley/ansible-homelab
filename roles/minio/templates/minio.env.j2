# {{ ansible_managed }}
# MinIO environment configuration

# MinIO root credentials
MINIO_ROOT_USER={{ minio_root_user }}
MINIO_ROOT_PASSWORD={{ minio_root_password }}

# MinIO volumes (data directories)
{% if minio_volumes | length > 0 %}
MINIO_VOLUMES="{{ minio_volumes }}"
{% else %}
MINIO_VOLUMES="{{ minio_data_dirs | join(' ') }}"
{% endif %}

# MinIO server address and ports
{% if minio_server_address | length > 0 %}
MINIO_OPTS="--address {{ minio_server_address }}:{{ minio_server_port }} --console-address {{ minio_server_address }}:{{ minio_console_port }}"
{% else %}
MINIO_OPTS="--address :{{ minio_server_port }} --console-address :{{ minio_console_port }}"
{% endif %}

# MinIO site region
MINIO_SITE_REGION={{ minio_site_region }}

{% if minio_enable_tls %}
# TLS certificate directory
MINIO_CERTS_DIR={{ minio_cert_dir }}
{% endif %}

{% if minio_server_opts | length > 0 %}
# Additional server options
MINIO_OPTS="${MINIO_OPTS} {{ minio_server_opts }}"
{% endif %}

{% if minio_server_env_extra | length > 0 %}
# Additional environment variables
{{ minio_server_env_extra }}
{% endif %}
