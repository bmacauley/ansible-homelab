# {{ ansible_managed }}
# Avahi daemon configuration for mDNS

[server]
host-name={{ mdns_hostname }}
domain-name={{ mdns_domain }}
use-ipv4=yes
use-ipv6=yes
allow-interfaces={{ mdns_interface }}
deny-interfaces=
ratelimit-interval-usec=1000000
ratelimit-burst=1000

[wide-area]
enable-wide-area=yes

[publish]
publish-addresses=yes
publish-hinfo=yes
publish-workstation={{ 'yes' if mdns_publish_workstation else 'no' }}
publish-domain=yes

[reflector]
enable-reflector=no

[rlimits]
rlimit-core=0
rlimit-data=4194304
rlimit-fsize=0
rlimit-nofile=768
rlimit-stack=4194304
rlimit-nproc=3

