{
  "permissions": {
    "allow": [
      "Bash(mise install:*)",
      "Bash(mise list:*)",
      "Bash(mise config:*)",
      "Bash(mise trust:*)",
      "Bash(uv init:*)",
      "Bash(echo:*)",
      "Bash(uv --version:*)",
      "Bash(/opt/homebrew/bin/mise exec:*)",
      "Bash(make lint:*)",
      "WebSearch",
      "WebFetch(domain:docs.ansible.com)",
      "Bash(uv run ansible-playbook:*)",
      "Bash(gh pr create:*)",
      "Bash(make storage test:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr view:*)"
    ],
    "deny": [],
    "ask": []
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
